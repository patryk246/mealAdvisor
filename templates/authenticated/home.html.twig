{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    {% include 'navbar/navbar.html.twig' %}
    <h2>Recently viewed receipes:</h2><br>
    <table class="table table-striped">
        <tbody>
        {% for recentlyViewedReceipe in recentlyViewedReceipes|slice(0,10) %}
            <tr>
                <td><h5>{{ recentlyViewedReceipe.getReceipeReference.getTitle }}</h5></td>
                <td><img src="{{ recentlyViewedReceipe.getReceipeReference.getImageUrl }}" style="width: 300px; height: 200px"></td>
                <td><a href="/receipes/show/{{ recentlyViewedReceipe.getReceipeReference.getReceipeId }}" class="btn btn-success">View</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Can't figure out what to cook? Let's see some receipes based on products which you already posses</h3>
    <a href="/products/select" class="btn btn-success">Find Receipes</a>
{% endblock %}