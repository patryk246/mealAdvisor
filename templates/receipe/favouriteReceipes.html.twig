{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    {% include 'navbar/navbar.html.twig' %}

    <h2>Your favourite receipes:</h2><br>
    <table class="table table-striped">
        <tbody>
        {% for userViewedReceipe in userViewedReceipes %}
            {% if userViewedReceipe.getIsFavourite %}
                <tr>
                    <td><h5>{{ userViewedReceipe.getReceipeReference.getTitle }}</h5></td>
                    <td><img src="{{ userViewedReceipe.getReceipeReference.getImageUrl }}" style="width: 300px; height: 200px"></td>
                    <td><a href="/receipes/show/{{ userViewedReceipe.getReceipeReference.getReceipeId }}" class="btn btn-success">View</a></td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

{% endblock %}